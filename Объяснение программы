#include <iostream> // Подключаем библиотеку для работы с вводом и выводом

int main() { // Главная функция программы
    double number; // Объявляем переменную для хранения вводимого числа
    double sum = 0.0; // Объявляем переменную для хранения суммы, инициализируем на 0

    std::cout << "Введите числа для суммирования (введите 0 для завершения):" << std::endl; // Выводим сообщение для пользователя

    while (true) { // Бесконечный цикл для ввода чисел
        std::cin >> number; // Ввод числа с клавиатуры и сохранение его в переменную number

        if (number == 0) { // Проверяем, введено ли число 0
            break; // Если 0, выходим из цикла
        }

        sum += number; // Добавляем введенное число к общей сумме
    }

    std::cout << "Сумма введенных чисел: " << sum << std::endl; // Выводим общую сумму введенных чисел

    return 0; // Завершаем программу и возвращаем 0
}